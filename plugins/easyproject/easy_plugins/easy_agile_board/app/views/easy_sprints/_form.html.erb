<h3>
  <%= f.text_field :name, :placeholder => l(:field_sprint_title) %>
  <%= f.text_field :start_date, :size => 10 %> - <%= f.text_field :due_date, :size => 10 %>
  <%= calendar_for('easy_sprint_start_date') %>
  <%= calendar_for('easy_sprint_due_date') %>
  <button type="submit" class="floatright button-1 icon icon-save">
    <%= l(f.object.new_record? ? :button_create_sprint : :button_save) %>
  </button>
</h3>

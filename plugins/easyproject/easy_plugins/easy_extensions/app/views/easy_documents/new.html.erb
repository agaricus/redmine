<div id="add-document">
  <h2><%=l(:label_document_new)%></h2>
  <%= labelled_form_for @document, :url => {:controller => 'documents', :action => 'create'}, :html => {:multipart => true, :class => 'tabular'} do |f| %>
    <div class="gray-background box">
      <p>
        <%= label_for_field(:project_id, {:required => true}) -%><%= select_tag :project_id, project_tree_options_for_select(@projects, :selected => @project), :include_blank => true, :required => true, :data => {:remote => true, :url => url_for(:action => :select_project)} -%>
      </p>
      <div id="document-dependent-fields">

      </div>
    </div>
    <p>
      <%= submit_tag l(:button_create), :class => 'floatleft' %>
    </p>
  <% end %>

</div>

<%= include_attachment_headers_tags %>
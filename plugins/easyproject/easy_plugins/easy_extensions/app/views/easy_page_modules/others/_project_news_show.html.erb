<% if page_module.entity_id.blank? -%>
  <%= render :partial => 'easy_page_modules/page_module_cannot_be_displayed', :locals => { :page_module => page_module } %>
<% else -%>
  <%= toggling_container(modul_uniq_id, user, {
      :heading => (l('easy_pages.modules.news')),
      :heading_links => link_to_if_authorized(l(:label_news_new),
        {:controller => 'news', :action => 'new', :project_id => @easy_page_modules_data[block_name][:project]},
        :class => 'button-1',
        :onclick => 'Element.show("add-news"); $("#news_title").focus(); return false;'),
      :container_html => {:class => 'project-info-news-container'}
    }) do %>
    <%= render(:partial => 'news/news', :collection => @easy_page_modules_data[block_name][:news])-%>
    <p class="small"><%= link_to l(:label_news_view_all), {:controller => 'news', :action => 'index', :project_id => @easy_page_modules_data[block_name][:project]} %></p>
  <% end %>
<% end -%>

<%= form_tag({}, :method => :get) do -%>
  <%= hidden_field_tag :uuid, page_module.uuid.dasherize -%>
  <%= hidden_field_tag "#{page_module.module_name}[start_date]", calendar.startdt, :id => "start-date-#{page_module.uuid.dasherize}" -%>
  <%= hidden_field_tag "#{page_module.module_name}[user_id]", user.id -%>
  <%= hidden_field_tag :t, params[:t] -%>
  <div class="easy-calendar-listing-links-container next-prev-links">
    <p>
      <%= link_to_function l("button_timelog_calendar_prev.#{period}"), "$('#start-date-#{page_module.uuid.dasherize}').val('#{calendar.prev_start_date}');$(this).closest('form').submit()" , :title => l("title_timelog_calendar_prev.#{period}"), :class => 'prev' -%>
    </p>
    <p>
      <span class="period"><%= "#{calendar.startdt.cweek} / " if period.to_sym == :week %><%= month_name(calendar.month) -%> <%= calendar.year -%></span>
    </p>
    <p>
      <%= link_to_function l("button_timelog_calendar_next.#{period}"), "$('#start-date-#{page_module.uuid.dasherize}').val('#{calendar.next_start_date}');$(this).closest('form').submit()" , :title => l("title_timelog_calendar_next.#{period}"), :class => 'next' -%>
    </p>
  </div>
<% end -%>
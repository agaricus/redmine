<%= title l(:label_group_plural) %>

<% if @groups.any? %>
  <table class="list groups">
    <thead><tr>
        <th><%=l(:label_group)%></th>
        <th><%=l(:field_easy_system_flag)%></th>
        <th><%=l(:label_user_plural)%></th>
        <th></th>
      </tr></thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr class="<%= cycle 'odd', 'even' %>">
          <td class="name"><%= link_to h(group), :action => 'edit', :id => group %></td>
          <td class="tick"><%= checked_image group.easy_system_flag? -%></td>
          <td><%= group.users.size %></td>
          <td class="buttons"><%= delete_link group %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="nodata"><%= l(:label_no_data) %></p>
<% end %>

<% ### PAGE CUSTOMS ########################################################## -%>

<% content_for :easy_page_layout_service_box do %>
  <%= link_to l(:label_group_new), new_group_path, :class => 'button-1' %>
<% end %>
<%= mobile_xhtml_doctype %>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title><%=h html_title %></title>
    <meta name="description" content="<%= Redmine::Info.app_name %>" />
    <meta name="keywords" content="issue,bug,tracker" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=1, minimum-scale=1.0, maximum-scale=2.0" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent"/>
    <%= csrf_meta_tag %>
    <%= favicon %>
    <%= heads_for_theme -%>
    <%= easy_theme_tag('easy_gradients') -%>
    <%= stylesheet_link_tag 'easy_design', :media => 'all', :plugin => 'easy_extensions' -%>
    <%= stylesheet_link_tag 'easy_mobile', :media => 'all', :plugin => 'easy_extensions' -%>

    <%= easy_mobile_device_css -%>

    <% if menu_items_for(:easy_quick_top_menu).count > 1 %>
      <style type="text/css">
        div#logo a {
          width: 40px;
        }
      </style>

    <% else %>
      <style type="text/css">
        div#logo a {
          width: 180px;
        }
      </style>
    <% end %>

  </head>
  <body class="login-page-layout easy-mobile-view">
    <div id="wrapper">
      <div id="wrapper2">
        <div id="wrapper3">
          <%= render :file => 'layouts/base_body_header' %>
          <div id="main" class="login-page">
              <%= yield %>
            </div>
          </div>
          <%= render :file => 'layouts/base_body_footer_wrapper', :formats => :html -%>
        </div>
      </div>
    </div>
  </body>
</html>
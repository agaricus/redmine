<% changesets.each do |changeset| %>
  <div class="bubble-container">
    <div class="floatleft">
      <%= avatar(changeset.author, :size => '60') -%>
    </div>
    <div class="bubble <%= cycle('odd','even') %>">
      <h4>
        <span class="author"><%= changeset.author %></span>: <%= link_to_revision(changeset, changeset.project, :text => "#{l(:label_revision)} #{changeset.format_identifier}") -%>
      </h4>
      <div class="description">
        <%= textilizable(changeset, :comments, {:headings => false}) -%>
      </div>
    </div>
    <div style="clear:both"></div>
  </div>
<% end %>

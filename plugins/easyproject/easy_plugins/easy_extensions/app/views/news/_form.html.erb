<%= error_messages_for @news %>
<div class="box tabular">
  <p><%= f.text_field :title, :required => true, :size => 60 %></p>
  <p style="display:none"><%= f.text_area :summary, :cols => 60, :rows => 2 %></p>
  <p class="description">
  	<%= label_for_field(:description, :required => true) %>
  	<%= f.text_area :description, :cols => 60, :rows => 15, :class => 'wiki-edit', :no_label => true %></p>
  <p id="news-spinned"><label><%= f.check_box :spinned -%></label></p>
  <p id="attachments_form"><label><%= l(:label_attachment_plural) %></label><%= render :partial => 'attachments/form', :locals => {:container => @news} %></p>
</div>

<%= wikitoolbar_for( 'news_description' ) unless in_mobile_view? -%>

<% unless @project.active? %>
  <p class="warning"><span class="icon icon-lock"><%= l(:text_project_closed) %></span></p>
<% end %>

<% ### PAGE CUSTOMS ########################################################## %>

<% content_for :easy_page_layout_service_box_bottom do %>
  <div class="customize-button-container">
    <%= link_to(l(:label_personalize_page), {:action => 'personalize_show', :id => @project, :t => params[:t]}, :class => 'customize-button button-2') if User.current.allowed_to?(:manage_page_project_overview, @project) %>
  </div>
<% end %>

<% content_for :easy_page_layout_content do %>
  <div class="project-heading">
    <%= render_project_heading(@project) %>
  </div>
<% end %>

<%= call_hook(:view_projects_show_bottom, {:project => @project}) %>

<%= context_menu issues_context_menu_path %>

<% modul_uniq_id ||= controller_name + '_' + action_name -%>
<div class="box">
  <%= toggling_container(modul_uniq_id, User.current, {:heading => l(:sidebar_budgetsheet_all_users_queries)}) do %>
    <div id="user-query-automatic-filter">
      <% User.active.non_system_flag.easy_type_internal.sorted.each do |user| %>
        <%= link_to(user.name, {:controller => 'budgetsheet', :set_filter => 1, :user_id => user.id, :spent_on => 'last_month', :query_by_user => 1}, :title => l(:label_show_assigned_issues, :username => user.name)) %>
      <% end %>
    </div>
  <% end %>
</div>